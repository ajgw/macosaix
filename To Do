@interface MacOSaiXDocument : NSDocument
{
}
-cacheImage:(NSImage *)image withIdentifier:(id)imageIdentifier fromSource:(ImageSource *)imageSource];
-cachedImageForIdentifier:(id)imageIdentifier fromSource:(ImageSource *)imageSource];


// Populate cache while matching
[document cacheImage:([imageSource canRefetchImages] ? thumbnailImage : fullImage) 
	  withIdentifier:identifier 
		  fromSource:imageSource];


// While updating the onscreen mosaic image go for the lo-res images.  The image should be in the cache
// unless the user messed with the saved file wrapper.
NSImage *image = [document cachedImageForIdentifier:imageIdentifier fromSource:imageSource];
if (!image && [imageSource canRefetchImages])
	image = [imageSource imageForIdentifier:imageIdentifier];


// While exporting go for the hi-res images first
NSImage *image = nil;
if ([imageSource canRefetchImages])
	image = [imageSource imageForIdentifier:imageIdentifier];
if (!image)
	image = [document cachedImageForIdentifier:imageIdentifier fromSource:imageSource];

